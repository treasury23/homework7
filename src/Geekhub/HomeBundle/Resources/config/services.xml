<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
            <parameter key="simple_service_class">Geekhub\HomeBundle\Service\SimpleService</parameter>
            <parameter key="simple_name">Ivan</parameter>
    </parameters>

    <services>
        <service id="simple_service" class="%simple_service_class%">
             <argument>%simple_name%</argument>
        </service>
    </services>

</container>
